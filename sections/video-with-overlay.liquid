<div class="hero_video_section">

  {%assign video = section.settings.video %}    

  {%if video != blank %}
    <div class="hero_video_section">
    {{ video | video_tag: image_size: '100%', autoplay: true, loop: true, controls: false, muted: true }}
    </div> 
  {%endif%} 
  <div class="video_overlay">
    {%if section.settings.overlay_heading != blank %}
    <h2>{{ section.settings.overlay_heading }}</h2>
    {%endif%}  
  {%if section.settings.overlay_content != blank %}
    <div class="overlay_content">
      <p>{{section.settings.overlay_content}}</p>
    </div> 
  {%endif%}  
  </div>  
</div>  
{% schema %}
{
  "name": "Overlay Video Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [ 
    {
      "type": "video",
      "id": "video",
      "label": "Select Video"    
    },
	{
      "type": "text",
      "id": "overlay_heading",
      "label": "Overlay text heading"
    },
	{
      "type": "html",
      "id": "overlay_content",
      "label": "Overlay Content"
    }	

  ],
  "presets": [
    {
      "name": "Overlay Video Section"
    }
  ]
}
{% endschema %} 