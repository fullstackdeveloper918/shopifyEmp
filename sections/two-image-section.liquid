        "label" : "Left Description"
      },
      {
        "type" : "text",
        "id" : "left_button",
        "label" : "Left Button"
      },
      {
        "type" : "url",
        "id" : "left_link",
        "label" : "Button Link"
      },
      {
        "type" : "image_picker",
        "id" : "right_image",
        "label" : "Right Image"
      },
      {
        "type" : "text",
        "id" : "right_tile",
        "label" : "Right Title"
      },
      {
        "type" : "richtext",
        "id" : "right_description",
        "label" : "Right Description"
      },
      {
        "type" : "text",
        "id" : "right_button",
        "label" : "Right Button"
      },
      {
        "type" : "url",
        "id" : "right_link",
        "label" : "Button Link"
      } 
    ],
    "presets" : [
