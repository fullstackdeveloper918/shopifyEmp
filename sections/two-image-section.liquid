<div class="two-image-container">
  <div class="two-image-row page-width">
     <div class="two-image-column" style="background-image: url('{{ section.settings.left_image | img_url : '' }}')">
        <div class="left-title">
          <h2 class="left-title-heading">{{ section.settings.left_title }}</h2>
          {{ section.settings.left_description }}
        </div>
        <div class="left-button">
          <a class="left-button-link" href="{{ section.settings.left_link }}">{{ section.settings.left_button }}</a>
        </div>
     </div>
     <div class="two-image-column" style="background-image: url('{{ section.settings.right_image | img_url : '' }}')">
        <div class="right-title">
          <h2 class="right-title-heading">{{ section.settings.right_tile }}</h2>
          {{ section.settings.right_description }}
        </div>
        <div class="right-button">
          <a class="right-button-link" href="{{ section.settings.right_link }}">{{ section.settings.right_button }}</a>
        </div>
     </div>
  </div>
</div>
